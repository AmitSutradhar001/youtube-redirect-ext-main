{
  "manifest_version": 3,
  "name": "YouTube Redirection",
  "version": "1.0",
  "description": "Adds a button on YouTube videos that shows an alert on click.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "icons": {
    "16": "images/image.png",
    "48": "images/image.png",
    "128": "images/image.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
